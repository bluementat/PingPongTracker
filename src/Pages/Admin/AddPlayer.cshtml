@page
@model PingPongTracker.Pages.Admin.AddPlayerModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add a Player";
}

<div class="text-center">
    <h3 class="display-4">Add New Player</h3>    
</div>

<div class="row">
	<div class="col-md-6">
		<form class="p-2" method="post">
			@Html.AntiForgeryToken()				
				<div class="mb-3">
						<label for="firstname" class="form-label col-form-label-sm">First Name</label>
						<input type="text" class="form-control form-control-sm" asp-for="NewPlayer.FirstName" >
				</div>
				<div class="mb-3">
						<label for="lastname" class="form-label col-form-label-sm">Last Name</label>
						<input type="text" class="form-control form-control-sm" asp-for="NewPlayer.LastName" >						
				</div>				
				<div class="mb-1">
						<label for="eligible" class="form-label col-form-label-sm">Eligible</label>
						<input type="checkbox" class="form-control form-control-sm form-check-input"  asp-for="NewPlayer.Eligible" >						
				</div>
				<div class="mb-1">
						<label for="active" class="form-label col-form-label-sm">Active</label>
						<input type="checkbox" class="form-control form-control-sm form-check-input" asp-for="NewPlayer.Active" >						
				</div>
				<br />
				<button type="submit" class="btn btn-lg btn-primary">Submit</button>
		</form>
	</div>
</div>
<br />
<p>
    <h5><a asp-page="Players" >Cancel - Return to Players</a></h5>
</p>