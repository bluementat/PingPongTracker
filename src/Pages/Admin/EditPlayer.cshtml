@page
@model PingPongTracker.Pages.Admin.EditPlayerModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit a Player";
}

<div class="text-center">
    <h3 class="display-4">Edit Player</h3>    
</div>

<div class="row">
	<div class="col-md-6">
		<form class="p-2" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>				
				<div>
					<input type="hidden" asp-for="PlayerToEdit.PlayerId" />
				</div>
				<div class="mb-3">
						<label for="UserName" class="form-label col-form-label-sm">User Name</label>
						<input type="text" class="form-control form-control-sm" asp-for="PlayerToEdit.UserName" >						
				</div>
				<div class="mb-3">
						<label for="firstname" class="form-label col-form-label-sm">First Name</label>
						<input type="text" class="form-control form-control-sm" asp-for="PlayerToEdit.FirstName" >
				</div>
				<div class="mb-3">
						<label for="lastname" class="form-label col-form-label-sm">Last Name</label>
						<input type="text" class="form-control form-control-sm" asp-for="PlayerToEdit.LastName" >						
				</div>				
				<div class="mb-1">
						<label for="eligible" class="form-label col-form-label-sm">Eligible</label>
						<input type="checkbox" class="form-control form-control-sm form-check-input"  asp-for="PlayerToEdit.Eligible" >						
				</div>
				<div class="mb-1">
						<label for="active" class="form-label col-form-label-sm">Active</label>
						<input type="checkbox" class="form-control form-control-sm form-check-input" asp-for="PlayerToEdit.Active" >						
				</div>
				<br />
				<button type="submit" class="btn btn-lg btn-primary">Update</button>
		</form>
	</div>
</div>
<br />
<p>
    <h5><a asp-page="Players" >Cancel - Return to Players</a></h5>
</p>