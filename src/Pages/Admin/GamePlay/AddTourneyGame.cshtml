@page
@model PingPongTracker.Pages.Admin.GamePlay.AddTourneyGameModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add a Game";
}

<div class="text-center">
    <h3 class="display-4">Add Game</h3>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="p-2" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <input type="hidden" asp-for="GameToAdd.GameId" />
            </div>
            <div class="row">
                <div class="col-md-9 col-9">
                    <label for="Team1Id" class="form-label col-form-label-sm">Visitors</label>
                    <select class="form-control form-control-sm" asp-for="GameToAdd.Team1Id"
                        asp-items="Model.TeamSelectList"></select>
                </div>
                <div class="col-md-3 col-3">
                    <label for="Team1Score" class="form-label col-form-label-sm">Score</label>
                    <input type="number" class="form-control form-control-sm" asp-for="GameToAdd.Team1Score" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-9 col-9">
                    <label for="Team2Id" class="form-label col-form-label-sm">Home</label>
                    <select class="form-control form-control-sm" asp-for="GameToAdd.Team2Id"
                        asp-items="Model.TeamSelectList"></select>
                </div>
                <div class="col-md-3 col-3">
                    <label for="Team2Score" class="form-label col-form-label-sm">Score</label>
                    <input type="number" class="form-control form-control-sm" asp-for="GameToAdd.Team2Score" />
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-lg btn-primary">Add Game</button>
        </form>
    </div>
</div>

<br />
<p>
<h5><a asp-page="/Admin/GamePlay/Tournament">Cancel - Return to Tournament</a></h5>
</p>
