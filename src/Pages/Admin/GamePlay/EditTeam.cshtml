@page
@model PingPongTracker.Pages.Admin.GamePlay.EditTeamModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit a Team";
}

<div class="text-center">
    <h3 class="display-4">Edit Team</h3>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="p-2" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <input type="hidden" asp-for="TeamToEdit.TeamID" />
            </div>
            <div class="mb-3">
                <label for="Player1Id" class="form-label col-form-label-sm">Player 1</label>
                <select class="form-control form-control-sm" asp-for="TeamToEdit.Player1Id"
                    asp-items="Model.ActivePlayerSelectList"></select>
            </div>
            <div class="mb-3">
                <label for="Player2Id" class="form-label col-form-label-sm">Player 2</label>
                <select class="form-control form-control-sm" asp-for="TeamToEdit.Player2Id"
                    asp-items="Model.ActivePlayerSelectList"></select>
            </div>
            <br />
            <button type="submit" class="btn btn-lg btn-primary">Update</button>
        </form>
    </div>
</div>

<br />
<p>
<h5><a asp-page="/Admin/GamePlay/Tournament">Cancel - Return to Tournament</a></h5>
</p>