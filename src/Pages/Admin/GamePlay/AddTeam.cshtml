@page
@model PingPongTracker.Pages.Admin.GamePlay.AddTeamModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add a Team";
}

<div class="text-center">
    <h3 class="display-4">Add Team</h3>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="p-2" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <input type="hidden" asp-for="TeamToAdd.TeamID" />
            </div>
            <div class="row">
                <div class="col-md-9 col-9">
                    <label for="Player1Id" class="form-label col-form-label-sm">Player 1</label>
                    <select class="form-control form-control-sm" asp-for="TeamToAdd.Player1Id"
                        asp-items="Model.ListOfPlayers"></select>
                </div>                
            </div>
            <div class="row">
                <div class="col-md-9 col-9">
                    <label for="Player2Id" class="form-label col-form-label-sm">Player 2</label>
                    <select class="form-control form-control-sm" asp-for="TeamToAdd.Player2Id"
                        asp-items="Model.ListOfPlayers"></select>
                </div>                    
            </div>
            <br />
            <button type="submit" class="btn btn-lg btn-primary">Add Team</button>
        </form>
    </div>
</div>

<br />
<p>
<h5><a asp-page="/Admin/GamePlay/Tournament">Cancel - Return to Tournament</a></h5>
</p>